<div class="home-container">
    <h3 class="home-caption">
        Make Every Day Count! Track Your <br>
         Habits Shape Your Future
    </h3>
    
    <div class="get-start" onclick="toggleRegisterform()">Get Start</div>

    <div id="form-container" class="form-container-hide">
        <div class="register-form-wrapper">

       
        <h2>Register</h2>
        <div class="register-formBox">

            <form action="/register" method="post" class="register-form">
                <div class="name-div form-control">
                    <label for="name"><i class="fa-regular fa-user"></i></label>
                    <input type="text" id="name" name="name" placeholder="Name">
                </div>
    
                <div class="email-div form-control">
                    <label for="email"><i class="fa-solid fa-envelope"></i></label>
                    <input type="text" name="email" id="email" placeholder="Email">
                </div>
    
                <div class="password-div form-control">
                    <label for="password"><i class="fa-solid fa-lock"></i></label>
                    <input type="password" id="password" name="password" placeholder="Password">
                </div>

                <button type="submit">Register</button>

            </form>

            <a href="/signin">Already have an account?</a>
           
            
        </div>
    </div>
        
    </div>
    
</div>





